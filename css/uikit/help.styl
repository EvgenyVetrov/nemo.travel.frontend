.new-ui-help {
	display: inline-block;
	width: 12px;
	height: 12px;
	cursor: pointer;
	background-image: url(images/ui/question.svg), none;
	background-size: 12px 12px;
	opacity: .5;
	transition: 0.3gs ease-in;

	&:hover {
		opacity: 1;
	}

	&Wrap & {
		display: inline-block;
		width: 12px;
		height: 12px;
		position: absolute;
		top: -6px;
		right: -15px;
		cursor: pointer;
		background-image: url(images/ui/question.svg), none;
		background-size: 12px 12px;
		opacity: .5;
		transition: 0.3s ease-in;
	}

	&Wrap:hover & {
		opacity: 1;
	}

	&Header {
		font-size: 14px;
		margin-bottom: 15px;
	}
}


/*
* Tolltipster (hint) plugin
*/

//COLORS
$c_ui_hint_bg = #fff;

//FONTS
$f_ui_hint_text = $c_ui_textMain;

//DIMENSIONS

.tooltipster {
	&-base {
		left: 0;
		overflow: visible;
		padding: 0;
		position: absolute;
		top: 0;
		width: auto;
		z-index: 999;
	}

	&-content {
		padding: 5px 15px;
		background: $c_ui_hint_bg;
		border-radius: 4px;
		box-shadow: $i_ui_subContainer_outershadow;
		color: $f_ui_hint_text;
		font-size: 12px;
		line-height: 15px;
		overflow: hidden;
		max-width: 310px;
	}

	&-header {
		font-size: 14px;
		margin-bottom: 10px;
		max-width: 310px;
	}

	&-close{
		position: absolute;
		top: 0px;
		right: 0px;
		width: 18px;
		height: 18px;
		background: url(images/ui/ui-icon-help_close.svg) center center no-repeat;
		background-size: 8px 8px;
		cursor: pointer;
		opacity: 0.5;
		transition: opacity 0.2s linear;

		&:hover{
			opacity: 1;
		}
	}

	&-fade {
		opacity: 0;
		transition-property: opacity;

		&-show {
			opacity: 1;
		}
	}
}