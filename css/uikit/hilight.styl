$d_ui_hilight_borderRadius  = 4px;
$d_ui_hilight_vPadding      = 10px;
$d_ui_hilight_hPadding      = 20px;
$d_ui_hilight_vMargin       = 20px;

$f_ui_hilight_size          = 13px;

$c_ui_hilight               = $nemo-color-text-main;

$c_ui_hilight_info_bg       = $nemo-color-notification_neutral;
$c_ui_hilight_error_bg      = $nemo-color-notification_error;
$c_ui_hilight_greenLight_bg = $nemo-color-notification_good;

.nemo-ui-hilight {
	display: block;
	text-align: left;

	margin: $d_ui_hilight_vMargin 0;
	padding: $d_ui_hilight_vPadding $d_ui_hilight_hPadding;

	color: $c_ui_hilight;
	font-size: $f_ui_hilight_size;

	border-radius: $d_ui_hilight_borderRadius;

	&:first-child {
		margin-top: 0;
	}

	&:last-child {
		margin-bottom: 0;
	}

	&+& {
		margin-top: 0;
	}

	&_info {
		background: $c_ui_hilight_info_bg;
	}

	&_error {
		background: $c_ui_hilight_error_bg;
	}

	&_greenLight {
		background: $c_ui_hilight_greenLight_bg;
	}
}