/**
 * Checkbox
 *
 * @usage: class "new-ui-checkbox" on element
 * @modifiers:
 * @tags: label
 * @example:
    <label class="new-ui-checkbox">
        <input class="new-ui-checkbox__input" type="checkbox">
        <span class="new-ui-checkbox__caption">Чекбокс</span>
    </label>
 */
// COLORS
$c_ui_caption                     = $nemo-color-text-main;
$c_ui_caption_text_hover          = lighten($nemo-color-text-main, 10);
$c_ui_caption_disabled            = $nemo-color-text-disabled;

$c_ui_switcher 			  	      = #0C91D7;
$c_ui_switcher_notChecked 	      = $nemo-color-LightPoint;
$c_ui_switcher_after_top          = #E5E5E5;
$c_ui_switcher_after_bottom       = #CCCCCC;
$c_ui_switcher_on_color           = #F6F6F6;
$c_ui_switcher_off_color          = #969599;

// DIMENSIONS
$d_ui_padding                     = 3px 0;
$d_ui_caption_lPadding            = 25px;
$d_ui_caption_padding             = 0 0 0 $d_ui_caption_lPadding;
$d_ui_pseudoInput_width           = 19px;
$d_ui_pseudoInput_height          = 19px;
$d_ui_pseudoInput_borderRadius    = 5px;

$d_ui_switcher_width              = 71px;
$d_ui_switcher_height             = 30px;
$d_ui_switcher_after_height       = 30px;
$d_ui_switcher_after_width        = 30px;

// FONT
$f_ui_caption_size                = 14px;
$f_ui_caption_lineHeight          = 16px;

$f_ui_switcher_text_size          = 12px;

// VALUES
$i_ui_checkbox                    = 'images/ui/checkbox_sprite.svg';

$i_ui_switcher_borderRadius       = 5px;
$i_ui_switcher_after_borderRadius = 4px;
$i_ui_switcher_boxShadowInner     = inset 0 0 5px rgba(0,0,0,.1);
$i_ui_switcher_boxShadowOuter     = 0 1px 2px rgba(0,0,0,.5);
$i_ui_switcher_textShadow         = 0 1px 0px rgba(0, 0, 0, 0.25);


.new-ui-checkbox {
    display: inline-block;
    padding: $d_ui_padding;
    cursor: pointer;

    &__input {
        position: absolute;
    }

    &__input:checked,
    &__input:not(:checked) {
        left: -99999px;
    }

    &__input:checked + &__caption,
    &__input:not(:checked) + &__caption {
        &:before {
            display: block;
        }
    }

	&__input:not(:checked) + &__caption {
		&:before {
			background-image: url($i_ui_checkbox);
			background-color: $nemo-color-neutral;

			//background-position: bottom;
		}
	}

    &__input:checked + &__caption {
        &:before {
			background-image: url($i_ui_checkbox);
			background-color: $nemo-color-main;
		}
    }

    &__input:disabled + &__caption {
        color: $c_ui_caption_disabled;
		background-color: $nemo-color-button-secondary_disabled;

		&:before {
			background-image: url($i_ui_checkbox);

			//background-position: bottom;
		}
    }

    &__caption {
        position: relative;
        display: inline-block;
        font-size: $f_ui_caption_size;
        color: $c_ui_caption;
        line-height: $f_ui_caption_lineHeight;
        padding: $d_ui_caption_padding;
        vertical-align: top;

        &:before {
            content: '';
            position: absolute;
            display: none;
            left: 0;
            top: 50%;
			overflow: hidden;
            width: $d_ui_pseudoInput_width;
            height: $d_ui_pseudoInput_height;
            margin-top: - ($d_ui_pseudoInput_height / 2);
            border-radius: $d_ui_pseudoInput_borderRadius;
			transition: background-color $nemo-transition-main ease;
        }

        &:hover {
            color: $c_ui_caption_text_hover;
        }
    }
    
    &_paddingTopBottom{
    	padding: 15px 0;
    }
}

// SWITCHER
.new-ui-switcher {

	&__label {
		cursor: pointer;
		display: block;

		&__input {
			position: absolute;
		}

		&__input:checked,
		&__input:not(:checked) {
			left: -99999px;
		}

		&__input:checked + &__text {
			&:after {
				right: 0;
			}
		}

		&__input:not(:checked) + &__text {
			background: $c_ui_switcher_notChecked;

			&:after {
				right: 100%;
				margin-right: - $d_ui_switcher_after_width;
			}
		}

		&__input:checked + &__text &__text__off {
			display: none;
		}

		&__input:not(:checked) + &__text &__text__on {
			display: none;
		}

		&__text {
			position: relative;
			background: $c_ui_switcher;
			width: $d_ui_switcher_width;
			height: $d_ui_switcher_height;
			font-size: $f_ui_switcher_text_size;
			border-radius: $i_ui_switcher_borderRadius;
			box-shadow: $i_ui_switcher_boxShadowInner, $i_ui_switcher_boxShadowOuter;
			text-shadow: $i_ui_switcher_textShadow;
			transition: background .4s ease-in-out;

			&:after {
				content:'';
				display: block;
				position: absolute;
				top: 0;
				right: 0;
				width: $d_ui_switcher_after_width;
				height: $d_ui_switcher_after_height;
				border-radius: $i_ui_switcher_after_borderRadius;
				cursor: pointer;
				background-image: linear-gradient(to bottom, $c_ui_switcher_after_top, $c_ui_switcher_after_bottom);
				z-index: 5;
				transition: all .25s ease-in-out;
			}

			&__off {
				position: absolute;
				right: 6px;
				top: 6px;
				color: $c_ui_switcher_off_color;
			}

			&__on {
				position: absolute;
				left: 9px;
				top: 6px;
				color: $c_ui_switcher_on_color;
			}
		}
	}
}

