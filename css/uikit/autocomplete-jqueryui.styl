.new-ui-autocomplete {
	display: block;
	position: absolute;
	left: 0;
	top: 0;
	z-index: 100;
	list-style: outside none none;
	margin: 0;
	padding: 0;
	outline: medium none;
	cursor: default;
	background: $nemo-color-LightPoint;
	border-radius: 4px;
	box-shadow: $i_ui_subContainer_outershadow;

	&__match {
		background: rgba(#FF9731, 0.5);
	}

	&_open {
		margin-top: 5px;
	}

	.ui-menu-item {
		cursor: pointer;
		list-style-image: none;
		margin: 0;
		min-height: 0;
		position: relative;
		padding: 10px;
		border-bottom: 1px solid #D7D7D7;
		transition: all 0.2s;

		font-size: 13px;
		line-height: 20px;
		color: #636467;

		&:last-of-type {
			border: none;
		}
	}

	.ui-state-focus {
		background: rgba($nemo-color-main, 0.1);
	}
}

.ui-helper-hidden-accessible {
	display: none;
}