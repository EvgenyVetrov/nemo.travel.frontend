$c_ui_slider_main      = $nemo-color-text-secondary;
$c_ui_slider_range     = $nemo-color-main;
$c_ui_slider_handler   = white;

.nemo-ui-slider {
  position: relative;
  background-color: $c_ui_slider_main;
  display: block;
  width: 100%;
  //height: 2px;
  cursor: pointer;
  height: 16px;

  //margin: 10px 0;

  &__info {
    display: flex;
    justify-content: center;
    font-size: 90%;
  }

  &__wrapper {
    padding: 0 20px 20px 20px;
  }

  &__range, .ui-slider-range {
    position: absolute;
    background-color: $c_ui_slider_range;
    height: 16px;
    //margin-top: -8px;
  }

  &__handler, .ui-slider-handle {
    position: absolute;
    height: 16px;
    width: 16px;
    //margin-top: -8px;
    background-color: $c_ui_slider_handler;
    box-shadow: 0 0 2px rgba(0, 0, 0, .5);
    border-radius: 0 4px 4px 0;

    &:first-of-type {
      border-radius: 4px 0 0 4px;
      margin-left: -16px;
    }
  }
}