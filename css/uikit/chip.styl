.nemo-ui-chip {
	position: relative;
	display: inline-flex;
	align-items: center;
	width: -webkit-fit-content;
	padding: 0;

	border: 10px;
	border-radius: 16px;
	background-color: rgb(224, 224, 224);
	transition: background-color 0.2s;

	cursor: default;
	text-decoration: none;
	outline: none;
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);

	&_clickable {
		cursor: pointer;

		&:hover {
			background-color: #d6d6d6;
		}
	}

	&__icon {
		display: inline-flex;
		align-items: center;
		justify-content: center;

		flex: 0 0 32px;
		height: 32px;
		width: 32px;
		margin-right: -4px;

		color: #fff;
		background-color: #a6a6a6;
		user-select: none;
		font-size: 14px;
		border-radius: 50%;

		.fa {
			margin-left: 1px;
		}
	}

	&__text {
		padding-left: 12px;
		padding-right: 12px;
		height: 32px;
		line-height: 33px;

		color: rgba(0, 0, 0, 0.6);
		font-size: 13px;
		font-weight: 500;
		user-select: none;

		flex: 1;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	&__remove {
		display: block;
		position: relative;

		flex: 0 0 20px;
		width: 20px;
		height: 20px;
		margin-left: -4px;
		margin-right: 6px;

		color: rgb(224, 224, 224);
		background-color: #a6a6a6;
		transition: background-color 0.2s;

		cursor: pointer;
		user-select: none;
		font-size: 12px;
		border-radius: 50%;

		i {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%,-50%);
		}

		&:hover {
			background-color: rgba(0, 0, 0, 0.54);
		}
	}
}
