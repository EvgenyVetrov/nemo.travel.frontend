/**
 * Hint for some elements
 * usage:
<div class="nemo-ui-hint">
	Hint text
</div>
 * Modifiers: nemo-ui-hint_info - grayed one
 */
// COLORS
$c_ui_hint_bg = $nemo-color-LightPoint;
$c_ui_hint_bg_warn = $c_highlight_warning;

// DIMENSIONS
$d_ui_hint_vPadding = 10px;
$d_ui_hint_hPadding = 10px;
$d_ui_hint_arrowSize = 7px;
$d_ui_hint_bRadius = 0px;

// FONT
$f_ui_hint = $c_common_textColor;
$f_ui_hint_size = 12px;
$f_ui_hint_lineheight = 15px;

// COMPOSITES
$i_ui_hint_shadow = 0px 2px 2px rgba(#000, 0.125);
$d_ui_hint_bRadius = 4px;

.nemo-ui-hint {
	transform: translate(-50%,0);
	position: absolute;
	left: 50%;
	bottom: 100%;

	margin-bottom: $d_ui_hint_arrowSize;
	padding: $d_ui_hint_vPadding $d_ui_hint_hPadding;

	color: $f_ui_hint;
	font-size: $f_ui_hint_size;
	line-height: $f_ui_hint_lineheight;

	background: $c_ui_hint_bg;
	border-radius: $d_ui_hint_bRadius;

	box-shadow: $i_ui_hint_shadow;

	text-align: center;

	white-space: nowrap;

	z-index: 10;

	cursor: pointer;

	&:before {
		/*content: '';
		position: absolute;
		border: $d_ui_hint_arrowSize transparent solid;
		border-top-color: $c_ui_hint_bg;
		border-bottom: 0px none;
		top: 100%;
		left: 50%;
		margin-left: 0 - $d_ui_hint_arrowSize;
		filter: drop-shadow(1px 1px 4px -2px rgba(0,0,0,0.75));*/
	}

	&_warn{
		background: $c_ui_hint_bg_warn;

		&:before{
			border-top-color: $c_ui_hint_bg_warn;
		}
	}
}
/*
* Tolltipster (hint) plugin
*/

.tooltipster {
	&-base {
		left: 0;
		overflow: visible;
		padding: 0;
		position: absolute;
		top: 0;
		width: auto;
		z-index: 999;
	}

	&-content {
		padding: 5px 15px;
		background: $c_ui_hint_bg;
		border-radius: 4px;
		box-shadow: $i_ui_subContainer_outershadow;
		color: $f_ui_hint_text;
		font-size: 12px;
		line-height: 15px;
		overflow: hidden;
		max-width: 310px;
	}

	&-header {
		font-size: 14px;
		margin-bottom: 10px;
		max-width: 310px;
	}

	&-close{
		position: absolute;
		top: 0px;
		right: 0px;
		width: 18px;
		height: 18px;
		background: url(images/ui/ui-icon-help_close.svg) center center no-repeat;
		background-size: 8px 8px;
		cursor: pointer;
		opacity: 0.5;
		transition: opacity 0.2s linear;

		&:hover{
			opacity: 1;
		}
	}

	&-fade {
		opacity: 0;
		transition-property: opacity;

		&-show {
			opacity: 1;
		}
	}
}