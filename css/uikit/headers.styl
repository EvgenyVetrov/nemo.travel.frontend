// COLORS
$c_ui_headers = $nemo-color-text-main;

// DIMENSIONS
$d_ui_sectionHeader_margin    = 15px;
$d_ui_subSectionHeader_margin = 15px;


// FONT
$f_ui_sectionHeader_size    = 18px;
$f_ui_subSectionHeader_size = 15px;



.nemo-ui- {
	/**
	 * Page section header
	 *
	 *
	 */

	&pageHeader {
		color: #0c91d7;
		font-size: 30px;
		padding-left: 20px;
		margin-bottom: 15px;
		margin-top: 5px;
		font-weight: 400;
	}

	&sectionHeader {
		// General

		// Dimensions
		padding: 0px;
		margin: $d_ui_sectionHeader_margin 0px;

		// Text
		color: $c_ui_headers;
		font-size: $f_ui_sectionHeader_size;
	}

	&subSectionHeader {
		// General

		// Dimensions
		padding: 0px;
		margin: 0px 0px $d_ui_subSectionHeader_margin 0px;

		// Text
		color: $c_ui_headers;
		font-size: $f_ui_subSectionHeader_size;

	}
}