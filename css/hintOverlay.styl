
.new-{
	&hintOverlay{
		position: absolute;
		display: none;
		top: 0;
		left: 0;
		right: 0;
		background: rgba(0, 0, 0, 0.5);
		z-index: 100;
		height: 100%;
		@media only screen and (max-width: 1340px) { 
			display: none;
		}
		&__main{
			max-width: 1600px;
			margin: 0 auto;
			padding: 0 300px;
			&__inner{
				position: relative;
			}
		}
		.nemo-root_hintOvarlay &{
			display: block;
			/ body{
				position: relative;
			}
		}
	}
	
	&hintContent{
		background: #fff;
		border-radius: 5px;
		padding: 15px;
		width: 240px;
		&__title{
			position: relative;
			font-size: 14px;
			line-height: 16px;
			padding: 0 0 15px;
			.common-close{
				position: absolute;
				top: 0;
				right: 0;
				background-size: 8px 8px;
				padding: 0 6px 0 0;
			}
		}
		&__main{
			&__text{
				color: #626366;
				font-size: 12px;
				line-height: 15px;
				padding: 0 0 10px;
			}
		}
		&__btn{
			padding: 0 0 10px;
			.new-ui-button{
				width 100%;
				text-align: center;
			}
		}
		&_margins{
			margin: 80px 0 105px 40px;
		}
	}
	
	&hintItem{
		position: absolute;
		&_default{
			top: 270px;
			left: -220px;
			.new-hintItem__arrow{
				top: 80px;
				left: 240px;
			}
		}
		&_first{
			top: 190px;
			left: 630px;
			.new-hintItem__arrow{
				top: 130px;
				left: 80px;
			}
		}
		&_second{
			top: 220px;
			right: -191px;
			.new-hintItem__arrow{
				
			}
		}
		&_third{
			top: 470px;
			right: -250px;
			.new-hintItem__arrow{
				top: 60px;
				left: -57px;
			}
		}
		&_fourth{
			top: 640px;
			right: -250px;
			.new-hintItem__arrow{
				top: 10px;
				left: -55px;
			}
		}
		&__arrow{
			position: absolute;
			
		}
	}
}
