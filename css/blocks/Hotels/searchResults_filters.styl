.nemo-hotels-results__content {
    &__postfilters {
        padding-top: 0 !important;

        &__loadingDummy {

            &:before {
                background: url(/css/images/ui/ui-loader-circle-blue.svg) no-repeat;
                animation: none;
                width: 50px;
                height: 50px;
            }

        }

        &__order {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;

            &__title {
                color: $nemo-color-LightPoint;
                line-height: 30px;
                margin-right: 15px;
            }
        }


        &__showOnMap{
            margin-bottom: 15px;
            display: none;

            &__button {
                width: 100%;
                font-size: 14px;
            }
        }

        &__inlineSlider {
            &__value {
                display: flex;
                padding-right: 20px;
                align-items: center;
                justify-content: space-between;
            }

            &__slider {
                padding-bottom: 0;
                width: 100%;
            }

            &__info {
                &__value {
                    display: inline-block;
                    min-width: 15px;
                }
            }
        }
    }
}

.nemo-hotels-results__summary {
    &__filters {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        z-index: 100;
        opacity: 1;
        width: 320px;
        margin: 10px;
        padding: 0;

        &__inner {
            padding: 10px;
            background: $nemo-color-LightPoint;
            box-shadow: 0 1px 8px $nemo-color-container-shadow;
            border-radius: $nemo-border-radius;
        }

        &__order {
            &__title {
                color: $nemo-color-text-main;
            }
        }

        &__filter {
            &__caption {
                &__name {
                    color: $nemo-color-text-main;
                }
            }

            &__valuesBlock,
            &__checkboxesBlock
            &__inlineSlider {
                border: 1px solid $nemo-color-neutral;
                border-radius: $nemo-border-radius;
            }
        }
    }
}

