@media (max-width: 1339px) {
	.nemo-hotels-results {
		&__content {
			&__sidebar {
				display: none;
			}

			&__results {
				flex-basis: 82%;
			}

			&__postfilters {
				&__showOnMap {
					display: block;
				}
			}
		}
	}
}

@media (max-width: 1049px) {
	.nemo-hotels-results {
		&__summary {
			&__filters {
				display: block;
			}

			&__filterSwitch {
				display: block;
			}
		}

		&__content {
			&__results {
				flex-basis: 100%;
				margin-top: 10px;
			}

			&__postfilters {
				display: none;

				&__order {
					&__title {
						color: #0a0a0f;
					}
				}
			}
		}
	}
}

@media (max-width: 859px) {
	.nemo-hotels-results {
		&__form {
			padding-bottom: 10px;
		}

		&__wrapper {
			background: $nemo-color-LightPoint;
			margin-top: 10px;
			border-radius: 4px;
		}

		&__summary {
			flex-direction: column-reverse;
			align-items: stretch;
			padding: 0;

			&__filterSwitch {
				margin: 10px;

				&__mobileText {
					display: inline;
				}
			}
				
			&__mapSwitch {
				margin-top: 0;
			}

			&__inner {
				background: $nemo-color-main;
				padding: 0;
				margin: 10px 10px 0;
				width: auto;
			}

			&__area {
				width: 100%;
				padding: 10px 20px;

				&__segment {
					color: $nemo-color-LightPoint;
					white-space: normal;

					&__geo {
						padding-right: 10px;
					}

					&__date {
						color: $nemo-color-LightPoint;
					}

					&__date,
					&__guests {
						display: inline-block;
						padding: 0 10px 0 0;
					}
				}
			}

			&__switch {
				display: none;
			}
		}
		
		&__groupList {
			&__item:not(:last-child) {
				margin-bottom: 10px;
			}
		}

		&__content {
			&__results {
				padding: 0;
				margin: 0 !important;
				box-shadow: none;
				background: transparent;
				
				&__loadingDummy {
					margin-top: 10px;
				}
			}
		}
			
		&__searchingInfo {
			&__header {
				color: #fff;
			}
		}
		
		&__hotelsGroup__content {
			padding: 10px 10px 7px 10px;
		}
	}
	
	.nemo-flights-results__error {
		box-shadow: 0px 0px 17px -4px rgba(0, 0, 0, .6);
		padding: 0;
		border-radius: $nemo-border-radius;
	}
}

@media (max-width: 500px) {
	.nemo-hotels-results {
		&__summary {
			&__filterSwitch {
				align-self: stretch;
				font-size: 15px;
			}

			&__filters {
				margin: 0;
				left: 50%;
				margin-left: -160px;
			}
		}

		&__content{
			&__results{
				&:after {
					display: none;
				}
			}
		}

		&__showMoreWrap {
			margin-bottom: -20px;
		}
	}

}


