

.new-ui-{

	&rating{
		display: inline-block;

		&__item{
			display: inline-block;
			background: url("images/star-grey.svg") 0 0 no-repeat;
			width: 16px;
			height: 16px;
			vertical-align: middle;

			&_selected{
				background: url("images/star-gold.svg") 0 0 no-repeat;
			}
		}
		
		&_small{
			
			.new-ui-rating__item{
				width: 10px;
				height: 10px;
			}
		}
	}
}

.new-{
	&cLogo{
		display: inline-block;
		vertical-align: middle;
		margin: 0 0 0 20px;
		img{
			vertical-align: middle;
		}
	}
}