/* @group Base */
.chosen- {
	// Main container base
	&container {
		position: relative;
		display: inline-block;
		vertical-align: middle;
		font-size: 13px;
		-webkit-user-select: none;
		-moz-user-select: none;
		user-select: none;
		cursor: pointer;
		color: $nemo-color-text-main;

		// Items - general
		.active-result, .group-result, .disabled-result, .result-selected, .no-results {
			@extend .nemo-ui-select__dropdown__item;

			overflow: hidden;
			text-overflow: ellipsis;

			list-style: none;
			-webkit-touch-callout: none;
		}

		.group-result {
			font-weight: bold;
			cursor: default;

			&:hover {
				background: transparent;
			}
		}

		.result-selected, .highlighted {
			@extend .nemo-ui-select__dropdown__item_hilighted;
		}

		.result-selected {
			cursor: auto;
		}

		.disabled-result {
			cursor: default;
			opacity: 0.5;
		}

		// No search results message
		.no-results {
			color: $nemo-color-text-secondary;
			display: list-item;
		}

		// Option in optgroup
		.group-option {
			padding-left: 20px;
		}

		// Search hilighted
		em {
			@extend .nemo-ui-autocomplete__match;
			font-style: normal;
		}
	}

	// Dropdown base
	&drop {
		@extend .nemo-ui-select__dropdown;
		display: block;
		right: auto;
		left: -9999px;
		width: 100%;
		min-width: 1px;
	}

	// Dropdown open
	&with-drop &drop {
		left: 0;
	}

	// Single- and multi-select
	&single, &choices {
		@extend .nemo-ui-textInput__input;
		margin: 0;
		position: relative;
		display: block;
		overflow: hidden;
		background-clip: padding-box;
		text-decoration: none;
		white-space: nowrap;
		text-overflow: ellipsis;
		line-height: 22px;
		color: $nemo-color-text-main;

		&:hover {
			color: $nemo-color-text-main;
		}
	}

	// Placeholder for single-select
	&default {
		color: #999;
	}

	&single {
		// Value container
		span {
			display: block;
			overflow: hidden;
			margin-right: 25px;
			text-overflow: ellipsis;
			white-space: nowrap;
		}

		// arrow container
		div {
			position: absolute;
			top: 0;
			right: 0;
			display: block;
			width: 25px;
			height: 100%;

			// Arrow
			b {
				display: block;
				width: 100%;
				height: 100%;
				background: url('images/ui/ui-select-arrow.svg') center center no-repeat;
				transition: all .2s;
			}
		}
	}

	&container-active &single,
	&container-active &choices {
		border: $i_ui_input_border_focus;

		b {
			transform: rotate(180deg);
		}
	}

	// Single-choice searchfield
	&search {
		@extend .nemo-ui-select__dropdown__item;
		position: relative;
		white-space: nowrap;
		border-top: 0;
		border-bottom: 1px solid $nemo-color-container-separator;

		&:after {
			content: '';
			position: absolute;
			top: 50%;
			right: 15px;
			margin-top: -10px;
			width: 20px;
			height: 20px;
			background: url('images/ui/ui-select-search.svg') center center no-repeat;
		}

		&:hover {
			background: transparent;
		}

		input[type="text"] {
			@extend .nemo-ui-textInput__input;
			margin: 0;
			padding-right: 25px;
		}
	}

	// Search disabled
	&container-single-nosearch &search {
		position: absolute;
		left: -9999px;
	}

	// Options container
	&results {
		position: relative;
		overflow-x: hidden;
		overflow-y: auto;
		padding: 0;
		margin: 0;
		max-height: 240px;
		-webkit-overflow-scrolling: touch;
	}

	// Multi-select-specific stuff
	&choices {
		height: auto;
		min-height: $d_ui_input_height;

		.search-field {
			margin: 0;
			padding: 0;
			white-space: nowrap;
			float: left;
			list-style: none;
		}

		input[type="text"] {
			padding: 0;
			height: 22px;
			outline: 0;
			border: 0 !important;
			background: transparent !important;
			box-shadow: none;
			font-family: sans-serif;
			line-height: normal;
			border-radius: 0;
			color: #999;

			&::placeholder {
				color: $c_ui_input_placeholder;
			}

			&:focus {
				color: inherit;
			}
		}

		// Selected
		.search-choice {
			position: relative;
			border-radius: 2px;
			border: 1px solid $nemo-color-container-separator;
			max-width: 100%;
			cursor: default;
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
			margin: 1px 2px 1px 0;
			padding: 0 20px 0 5px;
			font-size: 12px;
			line-height: 18px;
			background: #fafafa;
			float: left;
			list-style: none;

			&-disabled {
				opacity: .7;
			}

			&-focus {
				background: #d4d4d4;
			}

			&-close {
				position: absolute;
				top: 50%;
				right: 5px;
				margin-top: -5px;
				height: 10px;
				width: 10px;
				cursor: pointer;
				background: url('images/ui/popup-close.svg') center center no-repeat;
				opacity: .5;
				transition: all .2s;

				&:hover {
					opacity: 1;
				}
			}
		}
	}

	// Disabled Support
	&disabled {
		opacity: 0.5 !important;
		cursor: default;
	}

	&disabled &single {
		cursor: default;
	}

	&disabled &close {
		cursor: default;
	}
}

