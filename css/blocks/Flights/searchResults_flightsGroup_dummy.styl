.nemo-flights-results__flightsGroup_dummy {
	color: $nemo-color-neutral;
	opacity: 0.7;

	.nemo-ui-pseudoLink {
		&, &:hover, &_active {
			color: $nemo-color-neutral;
			border-color: $nemo-color-neutral;
			cursor: auto;
		}
	}

	.nemo-ui-button {
		cursor: auto;
	}

	&.nemo-flights-results__flightsGroup_common,
	&.nemo-flights-results__flightsGroup_bestCompanies {
		.nemo-flights-results__flightsGroup__header__title {
				letter-spacing: -4px;
		}
	}

	.nemo-flights-results__flightsGroup {
		&__subHeader__title {
			color: inherit;
		}

		&__footer__disclaimer {
			color: $nemo-color-neutral;
		}

		&__header {
			background: $nemo-color-neutral;

			&__logo {
				width: 130px;
				height: 30px;
				background: rgba($nemo-color-LightPoint, 0.5);
			}
		}

		&__leg {
			&__info__route__departure:after {
				opacity: 0.2;
			}

			&__selector {
				&__header__seatsAvailable {
					color: inherit;
					letter-spacing: -3px;
				}

				&__selected {
					&__timeEnRoute {
						color: inherit;
						letter-spacing: -3px;
					}

					&__time {
						letter-spacing: -4px;
					}
				}

				&__footer {
					color: inherit;
					letter-spacing: -3px;
				}

				&__header__title__text__dayOfWeek {
					color: inherit;
				}
			}

			&__info__date {
				&, &__dayOfWeek {
					color: inherit;
				}
			}
		}

		&__couplingButton {
			letter-spacing: -3px;
		}

		&__buyButton {
			letter-spacing: -4px;
		}
	}
	
	.nemo-flights-results__flightsListGroup__segment {
		//color: $nemo-color-neutral;
        //opacity: 0.7;
        
		&__carrier {
			&_stab {
				width: 130px;
				height: 30px;
				background: rgb($nemo-color-neutral);
            }
		}
		
		&__selected {
			&__time_departure, &__time_arrival {
				color: $nemo-color-neutral;
                letter-spacing: -5px;
			}
			&__portName {
				&_departure, &_arrival {
					color: $nemo-color-neutral;
					letter-spacing: -5px;
				}
			}
			&__city {
				&_departure, &_arrival {
					color: $nemo-color-neutral;
					letter-spacing: -5px;
				}
			}
		}
	}
	.nemo-flights-form {
		&-scheduleSearch {
			&__days {
				letter-spacing: -4px;
			}
		}
	}
	
}