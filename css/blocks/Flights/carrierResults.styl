.flights-carrierResults {
	max-width: 1350px;
	margin: 0 auto;
	padding: 0 20px 15px;

	&__leg {
		margin-top: 15px;

		&_404 {
			margin: 0 0 15px;

			&:last-child {
				margin-bottom: 40px;
			}
		}

		&_404 &__dates {
			&__date {
				border-bottom-left-radius: 4px;
				border-bottom-right-radius: 4px;
			}
		}

		&:first-child {
			margin-top: 0;
		}

		&__header {
			color: #ffffff;
			padding: 25px 0;
			text-align: center;
			line-height: 20px;
			font-size: 24px;
			position: relative;
			max-width: 1400px;
			margin: 0 auto;

			&__adaptiveCaption {
				display: none;
				font-weight: normal;
				font-size: 12px;
				color: #fff;
			}

			&__caption, &__date, &__departure, &__arrival {
				display: inline-block;
				max-width: 100%;
			}

			&__tip {
				display: none;
				padding: 5px 10px;
				border-radius: 4px;
				background: #fff;
				color: #505050;
				font-size: 16px;
				position: absolute;
				right: 0px;
				top: 20px;
				transition: all 0.7s;
				opacity: 0;

				&_visible {
					display: table;
					opacity: 1;
				}
			}

			&__caption {
				margin-right: 7px;
			}

			&__date:after {
				content: ',';
				padding-right: 5px;
			}

			&__departure:after {
				display: inline-block;
				content: '\2012';
				text-align: center;
				width: 30px;
			}
		}

		&__dates {
		//	padding: 0 70px;
			position: relative;
		//max-width: 1120px;
			max-width: 1400px;
			margin: 0 auto;
			text-align: center;
			display: flex;
			justify-content: center;

			&__arrow {
				position: relative;
				flex-basis: 100%;
				align-self: center;
				max-width: 70px;
				height: 70px;
				border-radius: 35px;
				cursor: pointer;
				top: 50%;
				left: 0;
				background-color: rgba(#fff, 0.2);

				transition: all .2s;

				&:before {
					content: '';
					position: absolute;
					width: 15px;
					height: 26px;
					left: 50%;
					top: 50%;
					margin: -13px 0 0 -8px;
					background: url(images/sprite.svg) -19px 0;
				}

				&_disabled {
					//display: none;
					background: none;
					cursor: default;

					&:hover {
						background: none !important;
					}

					&:before {
						background: none;
					}
				}

				&_next {
					left: auto;
					right: 0;

					&:before {
						transform: rotate(180deg);
					}
				}

				&:hover {
					background-color: rgba(#fff, 0.3);
				}
			}

			&__date {
				display: inline-block;
				vertical-align: bottom;
				max-width: 120px;
				flex-basis: 100%;
				border-radius: 4px 4px 0 0;
				margin: 0 10px;
				background: #fff;
				cursor: pointer;
				padding: 10px 20px 0;
				font-size: 12px;
				text-align: left;
				color: #6b6b6b;
				min-height: 70px;

				&_disabled {
					background: #f0f0f0;
					color: #a0a0a0;
					opacity: .5;
					cursor: auto;
				}

				&_selected {
					position: relative;

					&:before {
						position: absolute;
						content: "";
						width: 20px;
						height: 15px;
						background: url(img/RTchecks.svg) 0px 0px no-repeat;
						background-size: 40px 15px;
						top: 5px;
						right: 5px;
					}
				}

				&_active &_selected:before {
					background: url(img/RTchecks.svg) -20px 0px no-repeat;
					background-size: 40px 15px;
				}

				&__date {
					font-size: 30px;
					font-weight: bold;
					line-height: 40px;
					float: left;
					margin: 0 10px 0 0;
				}

				&__month {
					font-size: 16px;
					font-weight: bold;
				}

				&__dow {
					font-size: 12px;
					font-weight: lighter;
				}

			//&__month, &__DOW {
			//color: #a0a0a0;
			//}

				&__price {
					max-width: 100%;
					line-height: 30px;
					font-size: 13px;
					clear: both;
				}

				&_active {
					background: $nemo-color-main;
					color: #ffffff;

				//&, & * {
				//	color: #fff;
				//}
				}
			}
		}

		&__table {
			display: table;
			table-layout: fixed;
		//max-width: 1120px;
			max-width: 1400px;
			width: 100%;
			margin: 0 auto;
			border-radius: 4px;
			background: #fff;

			&__row {
				display: table-row;
			}

		//&__row:nth-child(2n) &__flightInfo, &__row:nth-child(2n) &__fareForFlight {
		//	background: lighten(#f0f0f0, 50%);
		//}
		//
		//&__row:nth-child(2n) &__fareForFlight_flightSelected &__fareForFlight__short {
		//	background: #fff;
		//}
		//
		//&__row:nth-child(2n) &__fareForFlight_fareSelected {
		//	background: blend(rgba(#7bb236, .1), lighten(#f0f0f0, 50%));
		//}

			&__row:last-child &__flightInfo {
				border-bottom-left-radius: 4px;
				border-bottom: none;
			}

			&__row:last-child &__fareForFlight:last-child {
				border-bottom-right-radius: 4px;
			}

			&__row:last-child &__fareForFlight {
				border-bottom: none;
			}

			&__flightsHeader, &__fareHeader, &__flightInfo, &__fareForFlight {
				display: table-cell;
			}

			&__flightsHeader {
				width: 320px;
				padding: 20px;
				line-height: 20px;
				font-size: 24px;
				color: #a0a0a0;
				border-bottom: 1px solid lighten(#dcdcdc, 50%);
			}

			&__fareHeader {
				text-align: center;
				vertical-align: middle;
				padding: 0 5px;
				border-left: 1px solid lighten(#dcdcdc, 50%);
				border-bottom: 1px solid lighten(#dcdcdc, 50%);
				transition: all .2s;
				position: relative;

			//&_fareSelected {
			//	background: lighten(#7bb236, 90%);
			//}

				&__title {
					display: inline-block;
					vertical-align: middle;
					font-size: 18px;
					line-height: 22px;
					color: #505050;
					max-width: 100%;
					font-weight: bold;
				}

				&__bestFare {
					position: absolute;
					bottom: 0;
					line-height: 18px;
					width: 100%;
					left: 0;
					font-size: 11px;
					color: #a0a0a0;
					font-weight: lighter;
				}
			}

			&__flightInfo {
				vertical-align: top;
				border-bottom: 1px solid lighten(#dcdcdc, 50%);

				&__shortInfo {
					padding: 10px 125px 10px 85px;
					position: relative;
					line-height: 20px;
					text-align: center;
					white-space: nowrap;
					color: #505050;
					font-size: 11px;
					cursor: pointer;
					height: 60px;

					&:after {
						content: '';
						position: absolute;
						width: 22px;
						height: 12px;
						background: url(images/sprite.svg) -39px 0 no-repeat;
						top: 50%;
						right: 20px;
						margin-top: -6px;

						transition: all .2s;
					}

					&__minPrice {
						display: none;
					}

					&__departure, &__arrival {
						position: absolute;
						width: 50px;
						top: 50%;
						height: 45px;
						margin-top: -23px;
						text-align: left;

						&__time {
							line-height: 25px;
							font-size: 20px;
							color: #636467;
							font-weight: bold;
						}

						&__IATA {
							line-height: 20px;
							font-size: 16px;
							color: #505050;
							opacity: .5;
						}
					}

					&__departure {
						left: 20px;
					}

					&__arrival {
						right: 50px;
					}

					&__transfers {
						border-bottom: 1px solid lighten(#a0a0a0, 50%);
						position: relative;

						&:after {
							content: '';
							position: absolute;
							height: 4px;
							width: 4px;
							border-top: 1px solid lighten(#a0a0a0, 50%);
							border-left: 1px solid lighten(#a0a0a0, 50%);
							bottom: -3px;
							right: -1px;
							transform: rotate(135deg);
						}
					}
				}

				&_flightSelected {
					background: lighten(#f0f0f0, 50%);
				}

				&_detailsOpen &__shortInfo:after {
					transform: rotate(180deg);
				}
			}

			&__fareForFlight {
				border-left: 1px solid lighten(#dcdcdc, 50%);
				vertical-align: top;
				transition: all .2s;
				border-bottom: 1px solid lighten(#dcdcdc, 50%);

				&_flightSelected {
					background: lighten(#f0f0f0, 50%);
				}

			//&_fareSelected {
			//	background: lighten(#7bb236, 90%);
			//}

				&_flightSelected&_fareSelected {
					background: #f1f1f1;
				}

				&__noSeats {
					padding: 10px 20px;
					line-height: 40px;
					font-size: 24px;
					color: #a0a0a0;
					text-align: center;
					font-weight: bold;

					&-adaptiveFareName {
						display: none;
						line-height: 25px;
						font-size: 11px;
						text-align: center;
					}
				}

				&__short {
					height: 60px;
					line-height: 20px;
					padding: 15px 10px 5px 55px;
					cursor: pointer;
					position: relative;
					transition: all .2s;

					&:before {
						content: '';
						position: absolute;
						height: 19px;
						width: 19px;
						background: url(images/sprite.svg) 0 -30px no-repeat;
						top: 50%;
						left: 20px;
						margin-top: -10px;
					}

					&:after {
						content: '';
						position: absolute;
						width: 0;
						height: 0;
						left: 30px;
						margin-top: 0;
						top: 50%;
						background: #2190cf;
						border-radius: 7px;
						transition: all .2s;
					}

					&__adaptiveFareName {
						display: none;
						line-height: 25px;
						font-size: 11px;
					}

					&__price {
						line-height: 25px;
						color: #636467;
						font-size: 24px;
						display: block;
						transition: all .2s;
						font-weight: bold;

						currency {
							font-size: 16px;
							padding-left: 4px;
							line-height: normal;
						}
					}

					&__seats {
						color: #a0a0a0;
						font-size: 12px;
						transition: all .2s;
					}
				}

				&_flightSelected&_fareSelected &__short {
					background: $nemo-color-main !important;

					&:after {
						width: 7px;
						height: 7px;
						left: 26px;
						margin-top: -4px;
					}

					* {
						color: #fff;
					}
				}

				&__compare {
					padding: 5px 0;

					&__item {
						line-height: 20px;
						padding: 0 10px 5px 35px;
						margin-top: 5px;
						font-size: 11px;
						position: relative;

						&:first-child {
							margin-top: 0;
						}

						&:before {
							content: '';
							position: absolute;
							background: url(images/sprite.svg) no-repeat;
							left: 20px;
						}

						&_unavailable:before {
							background-position: -70px -40px;
							width: 8px;
							height: 8px;
							top: 7px;
							margin-left: -4px;
						}

						&_paid:before {
							background-position: -70px -20px;
							width: 7px;
							height: 12px;
							top: 3px;
							margin-left: -4px;
						}

						&_free:before {
							background-position: -70px 0px;
							width: 10px;
							height: 9px;
							top: 7px;
							margin-left: -5px;
						}
						
						&.nemo-flights-results__fareFamilies__features__feature {
							padding-left: 15px;
							margin-bottom: 0;
						}
					}
				}

				&__tariff {
					padding: 0px 10px 10px 35px;
					position: relative;

					&:before {
						position: absolute;
						content: "";
						top: 1px;
						left: 13px;
						background: url(images/attention.svg) no-repeat;
						width: 15px;
						height: 15px;
					}

					&__link {
						font-size: 11px;
					}
				}
			}
		}

		&__flightRoute {
			border-top: 1px solid lighten(#dcdcdc, 50%);
			color: #505050;
			line-height: 20px;

			&_adaptive {
				display: none;
			}

			&-familyWarning {
				color: #ff6767;
				padding: 0 20px;
				font-weight: 600;
				cursor: pointer;

				&__icon {
					margin-right: 5px;
				}

				&__text {
					border-bottom: 1px dashed;
				}
			}

			&__header {
				padding: 10px 10px 5px 20px;
				border-bottom: 1px solid lighten(#dcdcdc, 50%);

				&__logo, &__flight, &__aircraft {
					display: inline-block;
					vertical-align: middle;
					width: 38%;
					overflow: hidden;
					text-overflow: ellipsis;
				}

				&__flight, &__aircraft {
					padding-left: 10px;

					&__title {
						font-size: 11px;
						color: #a0a0a0;
					}

					&__value {
						font-size: 13px;
						white-space: nowrap;
						overflow: hidden;
						text-overflow: ellipsis;
					}
				}

				&__flight {
					width: 24%;

					&__value {
						font-weight: bold;
					}
				}

				&__aircraft__value {
					display: inline;
				}

				&__logo {
					padding-right: 10px;

					&__image {
						max-width: 100%;
						max-height: 30px;
					}
				}
			}

			&__subHeader {
				border-bottom: 1px solid lighten(#dcdcdc, 50%);
				font-size: 11px;
				color: #a0a0a0;

				&__item {
					padding-left: 20px;
					display: inline-block;
					vertical-align: top;
					width: 50%;
				}
			}

			&__segment {
				border-bottom: 1px solid lighten(#dcdcdc, 50%);
				position: relative;

				&:after {
					content: '';
					position: absolute;
					top: 50%;
					left: 50%;
					width: 12px;
					height: 40px;
					margin: -20px 0 0 -6px;
					background: url(images/sprite.svg) -90px -1px no-repeat;
				}

				&__departure, &__arrival {
					padding: 5px 10px 5px 20px;
					display: inline-block;
					vertical-align: top;
					width: 50%;
					font-size: 11px;
					line-height: 15px;
				}
			}

			&__transfer, &__footer {
				border-bottom: 1px solid lighten(#dcdcdc, 50%);
				padding: 0 20px;
				font-size: 11px;

				&__caption {
					color: #a0a0a0;
					padding-right: 15px;
				}
			}

			&__footer {
				border-bottom: 0;
				padding: 10px 20px;
			}
		}
	}

	&__buyBlock {
		margin: 20px auto;
	//max-width: 1120px;
		max-width: 1400px;
	}

	&__selected {
		display: inline-block;
		vertical-align: top;
		width: 59%;

		&__header {
			color: #ffffff;
			line-height: 50px;
			font-size: 18px;
		}

		&__flights {
			border-radius: 4px;
			background: #fff;

			&__leg {
				border-top: 1px solid lighten(#dcdcdc, 50%);

				&:first-child {
					border-top: 0;
				}

				&__header {
					padding: 10px 20px;
					line-height: 30px;
					font-size: 16px;
					font-weight: bold;

					&__text {
						color: #a0a0a0;
					}

					&__departure:after {
						content: " \2012";
					}

					&__date:after {
						content: " ";
					}

					&__DOW {
						display: none;
					}

					&__localTime {
						font-size: 12px;
						color: #a0a0a0;
						line-height: 12px;
						font-weight: normal;
					}
				}

				&__passengers {
					padding: 0px 20px 10px;

					&__type {
						padding-right: 5px;

						&:after {
							content: ",";
						}

						&:last-child {
							padding: 0px;

							&:after {
								content: "";
							}
						}
					}
				}

				&__route {
					padding: 10px 20px 10px 300px;
					border-top: 1px solid lighten(#dcdcdc, 50%);
					position: relative;
					min-height: 70px;
					line-height: 25px;
					font-size: 12px;

					&__passengers {
						display: none;
					}

					&__departure, &__arrival {
						position: absolute;
						width: 50px;
						height: 45px;
						text-align: left;
						top: 10px;
						font-weight: bold;

						&__time {
							line-height: 25px;
							font-size: 20px;
							color: #636467;
						}

						&__IATA {
							line-height: 20px;
							font-size: 16px;
							color: #505050;
							opacity: .5;
						}
					}

					&__departure {
						left: 20px;
					}

					&__arrival {
						left: 210px;
					}

					&__transfers {
						border-bottom: 1px solid lighten(#a0a0a0, 50%);
						position: absolute;
						left: 85px;
						width: 110px;
						text-align: center;
						font-size: 11px;

						&:after {
							content: '';
							position: absolute;
							height: 4px;
							width: 4px;
							border-top: 1px solid lighten(#a0a0a0, 50%);
							border-left: 1px solid lighten(#a0a0a0, 50%);
							bottom: -3px;
							right: -1px;
							transform: rotate(135deg);
						}
					}

					&__timeEnRoute {
						position: absolute;
						left: 85px;
						width: 110px;
						text-align: center;
						font-size: 11px;
						top: 35px;
					}

					&__price {
						line-height: 20px;
						font-size: 16px;
						font-weight: bold;
						display: none;

						currency {
							font-weight: normal;
							font-size: 12px;
							line-height: normal;
						}
					}

					&__fullTransfers__caption {
						color: #a0a0a0;
						display: inline-block;
						margin-right: 10px;
					}

					&__distance:last-child {
						padding: 13px 0;
					}
				}

				&__fare {
					padding: 0 20px;
					border-top: 1px solid lighten(#dcdcdc, 50%);

					&__link {
						float: right;
						font-size: 11px;
						line-height: normal;
						margin-top: 3px;
						position: relative;

						&:before {
							position: absolute;
							content: "";
							top: -1px;
							left: -20px;
							background: url(images/attention.svg) no-repeat;
							width: 15px;
							height: 15px;
						}
					}

					&__header {
						padding: 15px 0;
						line-height: 20px;
						font-size: 16px;

						&__caption {
							color: #a0a0a0;
						}
					}

					&__features {
						padding-bottom: 5px;

						&__item {
							@extend .flights-carrierResults__leg__table__fareForFlight__compare__item;
							padding: 0 10px 5px 20px;
							margin: 0;
							display: inline-block;
							width: 33.3%;
							vertical-align: top;

							&:before {
								left: 5px;
							}
							
							&.nemo-flights-results__fareFamilies__features__feature {
								padding-left: 0;
							}
						}
					}
				}
			}
		}
	}

	&__payInfo {
		display: inline-block;
		vertical-align: top;
		width: 41%;
		padding-left: 20px;

		&__header {
			@extend .flights-carrierResults__selected__header;
		}

		&__details {
			border-radius: 4px;
			background: #fff;
			padding: 10px 0;
			margin-bottom: 15px;

			&__priceParts {
				padding: 0 20px;
				font-size: 13px;

				&__item {
					line-height: 20px;
					padding: 7px 0;

					&__name, &__value {
						display: inline-block;
						vertical-align: middle;
						width: 50%;
					}

				//&__name {
				//	color: #a0a0a0;
				//}

					&__value {
						text-align: right;
					}
				}
			}
		}

		&__insurance {
			display: block;
			margin: 10px 20px 0;
			padding: 10px 125px 10px 20px;
			border: 1px solid lighten(#dcdcdc, 50%);
			border-radius: 4px;
			position: relative;
			font-size: 13px;

			&:before {
				content: '';
				width: 95px;
				height: 20px;
				background: url('/templates/wurst/images/logo-extservices-alphainsurance.png') center center no-repeat;
				background-size: 100%;
