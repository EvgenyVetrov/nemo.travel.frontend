.nemo-flights-results {
	background: $c_content_bg;
	padding: 10px 0 20px;
	color: $c_ui_textMain;

	&__loader {
		max-width: 1540px;
		margin: 10px auto;
		height: 200px;
		background-image: url('images/ui/ui-loader-planes.svg');
		background-position: center center;
		background-repeat: no-repeat;
	}

	&__error {
		padding-top: 30px;
		padding-bottom: 30px;
		text-align: center;
		max-width: 1540px;
		color: #cc0000;
		font-size: 20px;
		margin: 0 auto;
	}

	&__form {
		margin: 0 0 10px;
	}

	&__formDummy {
		max-width: 1540px;
		margin: 0 auto 10px;
		color: $c_ui_textMain;

		background: #fff;
		border-radius: 4px;
		box-shadow: 0 0 7px rgba(0, 0, 0, 0.6) inset;

		display: flex;
		flex-flow: row nowrap;
		justify-content: flex-start/*space-between*/;
		align-items: stretch;

		&__route, &__passengers {
			font-size: 13px;
			line-height: 20px;
			padding: 10px;
			min-width: 1px;
		}

		&__route {
			flex-grow: 0;
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;

			&__segment {
				margin-right: 10px;
				display: inline;

				&:last-child {
					margin: 0;
				}

				&__geo, &__date {
					display: inline;
					vertical-align: top;
				}

				&__geo {
					&_departure:after {
						content: '';
						display: inline-block;
						width: 18px;
						height: 15px;
						margin: 0 5px;
						vertical-align: middle;
						background: url('images/flights_results_sprite.svg') 0px -10px no-repeat;
					}

					&__aux {
						color: $c_ui_textSecondary;
					}

					&_arrival {
						padding-right: 10px;
					}
				}

				&__date {
					color: $c_ui_textSecondary;
					margin: 0;
				}
			}

			&_RT &__segment__geo_departure:after {
				background-position: 0 1px;
			}
		}

		&__passengers {
			flex-shrink: 0;
			white-space: nowrap;
		}

		&__switch {
			flex-shrink: 0;
			margin-left: auto;
			height: 40px;
			line-height: 40px;
			background: $c_corporate_blue;
			font-size: 15px;

			&:hover, &:active {
				background: lighten($c_corporate_blue, 10%);
			}
		}
	}


	&__content {
		max-width: 1700px;
		margin: 0 auto;

		display: flex;
		flex-flow: row nowrap;
		justify-content: space-between;
		align-items: flex-start;

		&__postfilters, &__offers, &__results {
			margin: 10px;
			flex-grow: 0;
		}

		&__postfilters, &__offers {
			flex-basis: 18%;
			min-width: 280px;
			transition: all 0.2s;
			opacity: 0.4;
			flex-shrink: 0;

			&:hover {
				opacity: 1;
			}
		}

		&__results {
			padding: 20px;
			flex-basis: 64%;

			&__controls {
				display: flex;
				flex-flow: row nowrap;
				justify-content: space-between;
				align-items: flex-start;
				padding: 10px 0;

				&__item {
					line-height: 40px;

					&_count {
						flex-grow: 0;
						white-space: nowrap;
						overflow: hidden;
						text-overflow: ellipsis;
						padding-right: 20px;
						font-size: 15px;
					}

					&_sorting {
						flex-shrink: 0;
						margin-left: auto;
						font-size: 13px;
					}

					&__sortTitle {
						display: inline-block;
						vertical-align: middle;
						margin-right: 20px;
					}
				}
			}
		}
	}

	&__showcase {
		display: flex;
		flex-flow: row wrap;
		margin: -20px -20px 0;
		padding: 20px;
		border-bottom: $i_ui_subContainer_divider_border;

		&__item {
			border: 10px solid transparent;
			width: 50%;
			flex-grow: 0;

			&_recommended {
				width: 100%;
			}
		}
	}

	&__flightsGroup {
		padding: 0;

		&__header {
			display: flex;
			flex-flow: row nowrap;
			justify-content: flex-start;
			padding: 0;
			margin: 0;

			&__title {
				flex 1 1 auto;
				padding-left: $d_ui_subContainer_padding;
			}

			&__additional {
				flex 0 0 auto;
				margin-right: auto;
				padding: 0 $d_ui_subContainer_padding;
			}

			&__logo, &__info {
				display: inline-block;
				vertical-align: top;
				line-height: 30px;
				margin-left: 20px;
				padding: 10px 0;

				&:first-child {
					margin: 0;
				}
			}

			&__logo {
				height: auto;
				vertical-align: middle;
				max-height: 40px;
				max-width: 140px;
				padding: 0;
				margin-top: -2px;
			}

			&__info {
				height: 30px;
				width: 30px;
				margin-top: 10px;
				background: url("images/flights_results_sprite.svg") 5px -47px no-repeat;
				cursor: pointer;
				border-radius: 4px;
				transition: all .2s;

				&:hover {
					background-color: rgba(#fff, 0.1);
				}
			}
		}

		&__rating {
			display: inline-block;
			vertical-align: top;
			line-height: 30px;
			margin-left: 20px;

			&:first-child {
				margin: 0;
			}

			&__item {
				display: inline-block;
				vertical-align: top;
				width: 19px;
				height: 19px;
				background: url("images/flights_results_sprite.svg") 0 -80px no-repeat;

				&_active {
					background: url("images/flights_results_sprite.svg") 0 -110px no-repeat;
				}
			}

			&_inHeader {
				padding: 10px 0;
				line-height: 30px;
			}

			&_inHeader &__item {
				margin-top: 7px;
			}

			&_inSubHeader {
				line-height: 30px;
				padding: 2px 0;
			}

			&_inSubHeader &__item {
				margin-top: 7px;
			}
		}

		&__subHeader {
			display: flex;
			flex-flow: row nowrap;
			justify-content: flex-start;
			align-content: center;
			display: none;

			border-bottom: $i_ui_subContainer_divider_border;

			&__title {
				flex 1 1 auto;
				padding-left: $d_ui_subContainer_padding;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
				line-height: 34px;
				font-size: 13px;
				color: $c_ui_textSecondary;
			}

			&__additional {
				flex 0 0 auto;
				margin-right: auto;
				padding: 0 $d_ui_subContainer_padding;
			}
		}

		&__leg {
			border-bottom: $i_ui_subContainer_divider_border;

			&__info {
				padding: 20px 20px 15px 55px;
				position: relative;
				border-bottom: $i_ui_subContainer_divider_border;

				&:before {
					content: '';
					position: absolute;
					top: 50%;
					left: 20px;
					width: 20px;
					height: 20px;
					margin-top: -10px;
					background: url("images/flights_results_sprite.svg") 0px -140px no-repeat;
				}

				&__date {
					font-size: 12px;
					color: $c_ui_textMain;
					opacity: 0.75;

					&__dayOfWeek {
						color: $c_ui_textSecondary;
					}
				}

				&__route {
					font-size: 13px;
					overflow: hidden;
					white-space: nowrap;
					text-overflow: ellipsis;

					&__departure, &__arrival {
						display: inline;
					}

					&__departure {
						&:after {
							content: '';
							background: url("images/flights_results_sprite.svg") 0 -10px no-repeat;
							display: inline-block;
							height: 15px;
							margin: 0 5px;
							vertical-align: middle;
							width: 18px;
						}
					}
				}
			}

			&:nth-child(2n) &__info:before {
				background-position: 0px -170px;
			}

			&__selector {
				padding: 0 20px;

				&__header {
					display: flex;
					flex-flow: row nowrap;
					font-size: 13px;
					line-height: 40px;

					&__title {
						min-width: 1px;

						&__text {
							overflow: hidden;
							text-overflow: ellipsis;
							padding-right: 10px;
						}

						&__date {
							display: none;

							&__dayOfWeek {
								color: $c_ui_textSecondary;
							}
						}
					}

					&__seatsAvailable {
						flex-shrink: 0;
						min-width: 1px;
						white-space: nowrap;
						margin-left: auto;

						&_warning {
							color: #FF9731;
						}
					}
				}
			}
		}

		&_common &__legs_count_2 {
			display: flex;
			flex-flow: row nowrap;
			align-content: stretch;
		}

		&_common &__legs_count_2 &__leg {
			/*display: inline-block;*/
			/*vertical-align: top;*/
			/*width: 50%;*/
			border-right: $i_ui_subContainer_divider_border;
			border-right-style: dashed;
			flex: 0 0 50%;

			&:last-child {
				border-right: none;
			}
		}

		&_cheapest &__header__title,
		&_cheapest &__header__additional {
			background: #B23E13;
		}

		/* ================== */
		/* USE FOR ADAPTIVITY */
		/* ================== */
		&_fastest,
		&_cheapest,
		&_bestCompanies {
			.nemo-flights-results__flightsGroup {
				&__header__logo {
					max-width: 100px;
				}

				&__rating_inHeader {
					display: none;
				}

				&__subHeader {
					display: flex;
				}

				&__leg {
					&__info {
						display: none;
					}

					&__selector__header {
						font-size: 12px;
						line-height: 30px;
					}
				}
			}
		}
		/* ================== */
		/* ================== */
		/* ================== */
	}

	&__commonSelect {
		background: linear-gradient(to bottom, #F2F2F2, #E5E5E5);
		padding: 0 40px 0 20px;
		line-height: 40px;
		border-radius: 4px;

		.select2-selection__arrow {
			width: 40px;
			top: 0;
			right: 0;
		}
	}
}
