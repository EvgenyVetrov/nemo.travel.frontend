$fareFamiliesLightBorder = 1px solid rgba(230, 230, 230, .75);
$fareFamiliesMainPadding = 20px;

.nemo-flights-results__fareFamilies {
	border: $fareFamiliesLightBorder;
	border-radius: 4px;
	padding: 10px;
	margin: 15px $fareFamiliesMainPadding 5px;

	&__wrapper {
		.nemo-flights-results__fareFamilies__dummy {
			&:only-child {
				min-height:  50px;
				background: #f7f7f7;
				position: relative;

				&:before {
					content: '';
					display: block;
					width: 200px;
					height: 20px;
					position: absolute;
					background: #e8e8e8;
					top: 15px;
					left: 20px;
				}
			}
		}
	}

	&__header {
		margin-bottom: 15px;

		&__title {
			font-size: 13px;
			color: #64b5f6;

			&_togglable {
				font-weight: bold;
				color: inherit;
				height: 50px;
				display: block;
				float: left;
			}
		}

		&__chooseTariff {
			float: right;
			font-size: 13px;
		}

		&__rechooseTariff {
			font-size: 13px;
			text-align: center;
			padding: 10px;
			border: 1px solid rgba(230, 230, 230, .75);
			border-radius: 4px;
			cursor: pointer;

			&:hover a {
				border-bottom: 1px dashed rgba(14, 134, 230, .75);
				color: #349ef3;
			}
		}

		&__chooseTariff, &__rechooseTariff {
			a {
				&, &:active, &:focus, &:active:focus {
					outline: none !important;
				}
			}
		}
		
		&__icons {
			display: flex;
			float: right;
			height: 50px;
		}
		
		&__icon {
			font-size: 14px;
			padding-right: 10px;
			position: relative;
			
			&:last-of-type {
				// Справа от последней иконки будет стрелочка раскрытия блока.
				padding-right: 25px;
			}
			
			&__tooltip {
				.tooltipster-content {
					padding: 10px 15px;
					color: #333;
					
					.tooltipster-header {
						font-weight: bold;
					}
				}
			}
			
			&_disabled {
				&:after {
					content: '';
					position: absolute;
					height: 16px;
					top: @height;
					left: 6px;
					border-color: transparent transparent transparent #ff3939;
					border-style: solid;
					border-width: 1px;
					transform: skewX(-45deg);
				}
			}
			
			&_helpCursor {
				cursor: help;

				@media (max-width: 650px) {
					pointer-events: none;
				}
			}
		}
		
		&_togglable {
			padding: 0 $fareFamiliesMainPadding;
			margin-bottom: 0;
			cursor: pointer;
			//display: flex;
			//justify-content: space-between;
			//align-items: center;
			position: relative;
			color: #666;
			border-bottom: 1px solid rgba(230, 230, 230, .75);
			transition: all 0.2s ease;
			user-select: none;
			height: 50px;
			line-height: @height;
			
			&:hover {
				background-color: #f0f0f0;
			}
			
			&:after {
				content: '';
				position: absolute;
				width: 12px;
				height: 9px;
				top: 50%;
				margin-top: -4px;
				right: $fareFamiliesMainPadding;
				transition: all .2s;
				background: url(images/ui/ui-select-arrow.svg) center center no-repeat;
			}
			
			&_opened {
				&:after {
					transform: rotate(180deg);
				}
			}
			
			&_listMode {
				border-bottom: 0;
				border-bottom-left-radius: 4px;
				border-top: 1px solid rgba(230, 230, 230, .75);
			}
			
			&_opened&_listMode {
				border-bottom-left-radius: 0;
			}
		}
	}

	&__features {
		font-size: 11px;
		color: rgba(100, 100, 100, .75);
		display: flex;

		&__segment {
			border-bottom: 1px solid #eaeaea;

			&:only-child {
				border-bottom: 0;
			}

			&_multipleFares {
				padding-bottom: 10px;
			}

			&__route {
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding-left: 20px;
				padding-right: 20px;
				margin-top: 15px;

				&__tariffName {
					color: #666;
					font-size: 13px;
					font-weight: 600;
					padding-right: 5px;
				}

				&__main {
					display: flex;
					flex-basis: 100%;
					justify-content: space-between;
					align-items: baseline;
					flex-wrap: wrap;
				}

				&__value {
					font-size: 11px;
					color: #666;

					&__company {
						padding-right: 5px;
						font-weight: 600;
					}
				}

				&__about {
					white-space: nowrap;
					padding-left: 10px;
				}
			}
		}

		&__baggage, &__refunds, &__misc {
			&:not(:last-of-type) {
				margin-right: $fareFamiliesMainPadding;
			}
			
			ul {
				padding-left: 0;
				list-style-type: none;
				margin-bottom: 10px;
			}

			&__feature {
				padding-left: 18px;
				cursor: default;
				margin-bottom: 10px;

				&:last-child {
					margin-bottom: 0;
				}

				&__hint {
					z-index: 1005;
					.tooltipster-content {
						padding: 10px 15px;
						max-width: 300px;
					}
				}
			}
		}

		&__baggage {
			&__link {
				a {
					margin-left: 20px;
					outline: none;
					line-height: 15px;
				}

				.nemo-flights-results__fareFamilies__features__feature__icon {
					font-size: 13px;
					line-height: 15px;
					color: #64b5f6;
				}
			}

			&__markAsImportant {
				font-weight: bold;
			}
		}
		
		&__notice {
			font-size: 9px;
			margin-right: 10px;
			margin-left: 10px;
			margin-bottom: 10px;
			color: #999;
			border-top: 1px solid rgba(230,230,230,.75);
			padding-top: 10px;
			padding-left: 10px;
			padding-right: 10px;

			&:before {
				content: '*';
				padding-right: 5px;
			}
		}

		&__wrapper {
			&_togglable {
				display: none;
			}
			
			&_listMode {
				border-top: 1px solid rgba(230, 230, 230, .75);

				.nemo-flights-results__fareFamilies__features__segment {
					&:not(:only-child):last-child {
						border-bottom: 0;
						padding-bottom: 5px;
					}
				}
			}

			&_multipleFares {
				.nemo-flights-results__fareFamilies__features__segment {
					padding-bottom: 10px;
				}
			}
		}
		
		&__feature {
			margin-bottom: 10px;
			
			&__icon {
				position: absolute;
				
				.fa-check {
					color: #88c43d;
					font-size: 12px;
				}

				.fa-times {
					color: #ff6767;
					font-size: 12px;
				}
				
				.fa-rub,
				.fa-usd,
				.fa-eur,
				.fa-gbp,
				.fa-jpy,
				.fa-ils,
				.fa-krw,
				.fa-try {
					color: #64b5f6;
					font-size: 12px;
				}
			}
			
			&__text {
				padding-left: $fareFamiliesMainPadding;
				
				&__withBreak ~ & {
					display: block;
				}
			}
			
			&_helpCursor {
				cursor: help;

				@media (max-width: 650px) {
					pointer-events: none;
				}
			}
		}
		
		&_togglable {
			padding: 5px $fareFamiliesMainPadding 0 !important;
		}
		
		&_listMode {
			padding-top: 15px !important;
		}
	}

	&_full {
		margin: 15px (-($fareFamiliesMainPadding)) 15px;
		padding: $fareFamiliesMainPadding 40px;
		border: none;
		background-color: #f7f7f7;

		&:last-of-type {
			margin-bottom: -1px;
		}

		.nemo-flights-results__fareFamilies__header {
			margin-bottom: 15px;
		}

		.nemo-flights-results__fareFamilies__features {
			display: flex;
		}

		.nemo-flights-results__fareFamilies__features__notice {
			margin: 0;
			padding-left: 0;
			padding-right: 0;
		}

		.nemo-flights-results__fareFamilies__features__baggage,
		.nemo-flights-results__fareFamilies__features__refunds,
		.nemo-flights-results__fareFamilies__features__misc {
			font-size: 13px;
			max-width: 50%;
			
			&:not(:last-of-type) {
				margin-right: $fareFamiliesMainPadding;
			}

			ul {
				margin-top: 10px;
			}
		}

		.nemo-flights-results__fareFamilies__popup__tariffs__tariff__features__list {
			margin-bottom: 0;
			padding-bottom: 0;

			&:last-child {
				padding-bottom: 0;
			}
		}
	}

	&__popup {
		width: 720px !important;
		height: auto;
		overflow: visible;
		top: 70px !important;
		padding: 0 !important;
		font-family: $nemo-font-main;

		&-notice {
			@media (max-width: 650px) {
				display: none;
			}
		}
		
		&__contents {
			@media (max-width: 800px) {
				max-height: 100% !important;
				overflow: auto !important;
			}
		}
		
		@media (max-width: 800px) {
			position: fixed;
			top: 0 !important;
			left: 0 !important;
			bottom: 0 !important;
			right: 0 !important;
			width: auto !important;
			max-width: none !important;
		}

		.ui-dialog-titlebar {
			@media (max-width: 800px) {
				border-radius: 0;
			}
		}

		.ui-dialog-content.ui-widget-content {
			padding: $fareFamiliesMainPadding !important;
			
			@media (max-width: 800px) {
				max-height: 100% !important;
				height: 100% !important;
			}
			
			@media (max-width: 450px) {
				padding: 0 !important;
			}
		}
		
		.nemo-common-postFilters__notification {
			@media (max-width: 450px) {
				border-radius: 0;
				margin: 15px 0;
			}
		}

		&__header {
			margin-bottom: 15px;
			font-size: 1.1em;

			@media (max-width: 450px) {
				padding: 0 $fareFamiliesMainPadding;
			}
		}

		&__wrapper {
			min-height: 400px;
			
			&_error {
				@media (max-width: 800px) {
					display: flex;
					flex: 1;
					justify-content: center;
					align-items: center;
					height: 100%;
				}
			}

			@media (max-width: 800px) {
				padding-bottom: 30px;
			}
		}

		&__tariffs {
			display: flex;
			flex-wrap: wrap;
			justify-content: space-between;
			margin-bottom: -($fareFamiliesMainPadding);

			@media (max-width: 800px) {
				margin-bottom: 0;
			}

			&__error {
				width: 400px;
				text-align: center;
				margin: 0 auto;
				padding-top: 140px;

				@media (max-width: 800px) {
					padding-top: 0;
				}

				&__text {
					font-size: 30px;
					font-weight: bold;
					color: #bbb;
					text-align: center;
					cursor: default;
				}
			}

			&__tariff {
				background-color: #f7f7f7;
				box-shadow: none !important;
				width: 330px;
				max-width: @width;
				position: relative;
				padding: $fareFamiliesMainPadding 30px;
				margin-bottom: $fareFamiliesMainPadding;
				border-radius: 4px;
				
				@media (max-width: 800px) {
					width: 100%;
					max-width: none;
				}

				&__header {
					background-color: #64b5f6;
					margin: (-($fareFamiliesMainPadding)) -30px $fareFamiliesMainPadding !important;
					overflow: visible;

					&__title {
						font-weight: bold;
						font-size: 1.2em;
					}
					
					@media (max-width: 450px) {
						border-radius: 0;
					}
				}

				&__features {
					margin-bottom: 60px;

					&__list {
						padding-left: 0;
						list-style-type: none;
						margin: 15px 0;
						padding-bottom: 15px;
						border-bottom: 1px solid #eeeeee;

						&:last-child {
							border-bottom: none;
							padding-bottom: 15px;
						}

						&__title {
							display: none;
							color: #999;

							font-size: 11px;
							margin-bottom: 10px;
						}

						&__feature {
							margin-bottom: 12px;
							color: #626467;
							cursor: default;

							&:last-child {
								margin-bottom: 0;
							}

							&__hint {
								z-index: 1005 !important;

								.tooltipster-content {
									padding: 10px 15px !important;
									max-width: 300px !important;
								}
							}

							&__icon {
								position: absolute;

								.fa-check {
									color: #88c43d;
									font-size: 13px;
								}

								.fa-times {
									color: #ff6767;
									font-size: 13px;
								}

								.fa-rub,
								.fa-usd,
								.fa-eur,
								.fa-gbp,
								.fa-jpy,
								.fa-ils,
								.fa-krw,
								.fa-try {
									color: #64b5f6;
									font-size: 13px;
								}
							}
							
							&__text {
								padding-left: 20px;
							}

							money {
								margin-right: 4px;
							}
						}
					}
				}

				&__price {
					height: 40px;
					line-height: 41px;
					padding: 0 $fareFamiliesMainPadding;
					position: absolute;
					left: $fareFamiliesMainPadding;
					bottom: $fareFamiliesMainPadding;
					border-radius: 4px;
					font-size: 16px;
					font-weight: bold;
					color: #636469;
					background: #fae58c;
				}

				&__buy {
					position: absolute;
					right: $fareFamiliesMainPadding;
					bottom: $fareFamiliesMainPadding;

					&__button {
						font-weight: bold;
						padding-right: 45px;
						overflow: visible !important;
					}
				}
			}
		}

		&__coverage {
			position: absolute;
			top: 0;
			bottom: 0;
			left: 0;
			right: 0;
			background: rgba(255, 255, 255, 0.7);
			cursor: wait;

			&__global {
				position: fixed;
				top: 0;
				bottom: 0;
				left: 0;
				right: 0;
				z-index: 9999;
				background: transparent;
			}

			&__loader {
				background-image: url('images/loader.svg');
				background-size: 40px;
				width: 40px;
				height: 40px;
				position: absolute;
				top: 50%;
				left: 50%;
				margin-left: -($fareFamiliesMainPadding);
				margin-top: -($fareFamiliesMainPadding);
			}
		}
	}

	&_slim {
	   position: relative;

		.nemo-flights-results__fareFamilies__popup__tariffs__tariff__features__list {
			margin: 10px 0 0;
			padding-bottom: 0;
			font-size: 13px;

			&__feature__icon {
				height: 14px;
			}
		}
	}

	&_slim &__header:not(&__header_togglable) {
		border-bottom: $fareFamiliesLightBorder;
		margin: 0 -10px;
		padding: 0 10px 10px;

		&__chooseTariff {
			display: block;
			border-top: $fareFamiliesLightBorder;
			padding: 0 10px;
			float: none;
			position: absolute;
			bottom: 0;
			left: 0;
			right: 0;
			height: 35px;
			line-height: 35px;
			overflow: hidden;
		}
	}

	&_slim &__features {
		padding-bottom: 35px;
		display: block;

		&__baggage,
		&__refunds,
		&__misc {
			width: auto;
			margin-top: 10px;
			float: none;
		}

		&__refunds,
		&__misc {
			border-top: $fareFamiliesLightBorder;
			margin: 10px -10px 0 -10px;
			padding: 10px 10px 0;
		}
	}

	&_noMargin {
		margin: 10px 0 0;
	}

	&_noPadding &__features {
		padding-bottom: 0;
	}

	&__subClasses {
		display: block;
		margin: 15px $fareFamiliesMainPadding 5px;
	}
	
	&__actions {
		border-top: 1px solid rgba(230, 230, 230, .75);
		border-bottom: @border-top;
		margin-top: 15px;
		padding: 10px $fareFamiliesMainPadding;
		display: flex;

		&_listMode {
			margin-top: 5px;
		}
	}
	
	&__action {
		text-align: center;
		
		a {
			outline: none;
		}
		
		&:not(:last-of-type) {
			margin-right: 15px;
		}
	}
	
	&_togglable {
		margin: 0;
		padding: 0;
		border: 0;
		border-radius: 0;
		background-color: #f7f7f7;
		overflow: hidden;
	}
	
	&_listMode {
		border-bottom-left-radius: 4px;
		overflow: visible;
		flex-basis: 100%;
		height: 50px;

		position: absolute;
		left: 0;
		right: 0;
		bottom: 0;
	}
	
	&_listMode&_opened {
		height: auto;
		position: static;
		margin-bottom: -50px;
	}

	&_checkout&_togglable {
		margin: 15px -20px 0;
		border-bottom: 1px solid rgba(230, 230, 230, .75);
	}

	&_checkout&_togglable &__features {
		padding: 0 20px 20px;
	}

	&_checkout&_togglable &__header {
		border-top: 1px solid rgba(230, 230, 230, .75);
		cursor: default;
		
		&:hover {
			background-color: #f7f7f7;
		}
		
		&:after {
			display: none;
		}
	}

	&_checkout&_full&_togglable {
		margin: 15px -40px;
		border-radius: 0;

		@media (max-width: 400px) {
			margin-right: 0;
		}
	}
}
