// DIMENSIONS
$d_ui_menuicon_width 			= 20px;
$d_ui_menuicon_height			= 14px;

$d_ui_greyCross_width			= 12px;
$d_ui_greyCross_height			= 12px;

$d_ui_leftRightArrow_width		= 16px; 		
$d_ui_leftRightArrow_height		= 8px; 		

$d_ui_overlayMenu_width			= 4px;
$d_ui_overlayMenu_height		= 17px;

$d_ui_arrTopBottom_width		= 10px;				
$d_ui_arrTopBottom_height		= 18px;

$d_ui_close_circle_width		= 20px;
$d_ui_close_circle_height		= 20px;

// BACKGROUND-IMAGES
$bg_menuIcon 					= url("images/menu-icon.svg") 0 0 no-repeat;
$bg_backIcon					= url("images/arr-back.svg") 0 0 no-repeat;
$bg_overlayMenu					= url("images/popMenu.svg") 0 0 no-repeat;
$bg_leftRightArrow				= url("images/arr-left-right.svg") 0 0 no-repeat;
$bg_greyCross					= url("images/close.svg") 0 0 no-repeat;
$bg_arrTopBottom				= url("images/arr-top-bottom.svg") 0 0 no-repeat;
$bg_close						= url("images/close-white.svg") 0 0 no-repeat;


.new-ui-{
	
	// main menu icon
	&mMenuIcon{
		background: $bg_menuIcon;
		width: $d_ui_menuicon_width;
		height: $d_ui_menuicon_height;
		display: inline-block;
		
		.side-menu-open &{
			background: $bg_backIcon;
		}
	}
	
	// main menu icon back
	&mMenuBack{
		display: none;
		
		.side-menu-open &{
			display: inline-block;
		}
	}
	
	// overlay for mobile menu
	&overlayMenu{
		background: $bg_overlayMenu;
		width: $d_ui_overlayMenu_width;
		height: $d_ui_overlayMenu_height;
		display: inline-block;
	}
	
	&arrLeftRight{
		background: $bg_leftRightArrow;
		width: $d_ui_leftRightArrow_width;
		height: $d_ui_leftRightArrow_height;
		display: inline-block;
	}
	
	&arrTopBlue{
		background: url("images/arr-top-blue.svg") 0 0 no-repeat;
		width: 10px;
		height: 6px;
		display: inline-block;
		vertical-align: middle;
	}
	
	&ArrowOneCircle{
		background: url("images/path-one.svg") 0 0 no-repeat;
		width: 50px;
		height: 8px;
		display: inline-block;
		vertical-align: middle;
	}
	
	&ArrowTwoCircle{
		background: url("images/path-two.svg") 0 0 no-repeat;
		width: 50px;
		height: 8px;
		display: inline-block;
		vertical-align: middle;
	}
	
	&iconCart{
		background: url("images/cart.svg") 0 0 no-repeat;
		width: 22px;
		height: 18px;
		display: inline-block;
		vertical-align: middle;
		margin: 0 15px 0 0;
	}
	
	&arrRight{
		background: url("images/arr-right.svg") 0 0 no-repeat;
		width: 10px;
		height: 4px;
		display: inline-block;
		margin: 0 5px;
		vertical-align: middle;
	}
	
	&arrTopBottom{
		background: $bg_arrTopBottom;
		width: $d_ui_arrTopBottom_width;
		height: $d_ui_arrTopBottom_height;
		display: inline-block;
		vertical-align: middle;
	}
	
	&arrBottom{
		background: url("images/arr-bott-blue1.svg") 0 0 no-repeat;
		width: 10px;
		height: 6px;
		display: inline-block;
		vertical-align: middle;
	}
	
	&greyCross{
		background: $bg_greyCross;
		width: $d_ui_greyCross_width;
		height: $d_ui_greyCross_height;
		display: inline-block;
	}
	
	&iconClose{
		background: $bg_close;
		width: $d_ui_close_circle_width;
		height: $d_ui_close_circle_height;
		display: inline-block;
		vertical-align: middle;
	}
	
	&iconClock{
		background: url("images/clock.svg") 0 0 no-repeat;
		width: 20px;
		height: 20px;
		display: inline-block;
		vertical-align: middle;
	}
	
	// soc
	&soc-direction{
		display: inline-block;
		width: 25px;
		height: 22px;
		background: url("images/account.svg") 0 0 no-repeat;
	}
	&soc-fb{
		display: inline-block;
		width: 24px;
		height: 22px;
		background: url("images/account_fb.svg") 0 0 no-repeat;
	}
	&soc-mail{
		display: inline-block;
		width: 22px;
		height: 21px;
		background: url("images/account_mail.svg") 0 0 no-repeat;
	}
	&soc-tw{
		display: inline-block;
		width: 21px;
		height: 17px;
		background: url("images/account_tw.svg") 0 0 no-repeat;
	}
	&soc-vk{
		display: inline-block;
		width: 22px;
		height: 22px;
		background: url("images/account_vk.svg") 0 0 no-repeat;
	}
	&soc-ya{
		display: inline-block;
		width: 10px;
		height: 22px;
		background: url("images/account_ya.svg") 0 0 no-repeat;
	}
}